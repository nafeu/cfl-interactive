<!-- views/pages/instructor.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %>
</head>
<style type="text/css">
  .instructor-button {
    width: 100%;
  }

  body {
    background-color: #222f3e;
    padding: 40px;
    color: white;
  }

  h4 {
    margin-top: 0;
    color: white;
    font-weight: 100;
    font-size: 1.25em;
  }

  .unapproved-question, .approved-question {
    padding: 20px;
    border: 1px solid black;
  }

  .approve-btn, .reject-btn, .remove-btn, .action-btn {
    cursor: pointer;
  }

  #section-a, #section-b, #section-c {
    padding: 30px;
  }

  #section-a {
    background-color: #5f27cd;
    border-bottom: 50px solid #341f97;
  }

  #section-b {
    background-color: #54a0ff;
    border-bottom: 50px solid #2e86de;
  }

  #section-c {
    background-color: #00d2d3;
    border-bottom: 50px solid #01a3a4;
  }

  .action-btn {
    cursor: pointer;
    text-align: center;
    border: 1px solid white;
    border-bottom: 4px solid white;
    padding: 10px;
    margin: 20px;
    font-weight: 100;
    font-size: 1.5em;
    border-radius: 10px;
  }

  .action-btn:active {
    color: #5f27cd;
    background-color: white;
  }

</style>
<body>
  <div class="row">
    <div id="section-a" class="col-md-3 col-xs-12">
      <h4>Viewer Control</h4>
      <div id="instructor-actions">
        <div class="action-btn" onclick="emitNextPage()">Next Page</div>
        <div class="action-btn" onclick="emitPreviousPage()">Previous Page</div>
        <div class="action-btn" onclick="emitZoomIn()">Zoom In</div>
        <div class="action-btn" onclick="emitZoomOut()">Zoom Out</div>
      </div>
    </div>
    <div id="section-b" class="col-md-4 col-md-offset-1 col-xs-12">
      <h4>Approvals</h4>
      <div id="unapproved-questions">

      </div>
    </div>
    <div id="section-c" class="col-md-4 col-xs-12">
      <h4>Live</h4>
      <div id="approved-questions">

      </div>
    </div>
  </div>
  <script src="js/instructor.js"></script>
</body>
</html>