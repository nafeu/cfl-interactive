<!-- views/pages/instructor.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/head %>
</head>
<style type="text/css">
  .instructor-button {
    width: 100%;
  }

  body {
    background-color: #222f3e;
    padding: 40px;
    color: white;
  }

  .unapproved-question, .approved-question {
    padding: 20px;
    border: 1px solid black;
  }

  .approve-btn, .reject-btn, .remove-btn, .action-btn {
    cursor: pointer;
  }

  #section-a, #section-b, #section-c {
    padding: 30px;
    margin-bottom: 20px;
  }

  #section-a {
    background-color: #5f27cd;
    border-bottom: 50px solid #341f97;
  }

  #section-b {
    background-color: #54a0ff;
    border-bottom: 50px solid #2e86de;
  }

  #section-c {
    background-color: #1dd1a1;
    border-bottom: 50px solid #10ac84;
  }

  .action-btn {
    cursor: pointer;
    text-align: center;
    border: 1px solid white;
    border-bottom: 4px solid white;
    padding: 10px;
    margin: 20px;
    font-weight: 100;
    font-size: 1.5em;
    border-radius: 10px;
  }

  .action-btn:active {
    color: #5f27cd;
    background-color: white;
  }

  .approved-question, .unapproved-question {
    padding: 10px;
    font-size: 1.25em;
    margin: 10px;
    border-radius: 5px;
    font-weight: 100;
    border: none;
  }

  .approved-question {
    background-color: #10ac84;
  }

  .unapproved-question {
    background-color: #2e86de;
  }

  .question-actions {
    font-size: 1.4em;
  }

  .approve-btn, .reject-btn, .remove-btn {
    display: inline-block;
    margin: 5px 10px 5px 0px;
    padding: 0px 5px 0px 5px;
    border: 1px solid white;
    border-radius: 5px;
    min-width: 30px;
    text-align: center;
  }

  .approve-btn:hover, .reject-btn:hover, .remove-btn:hover {
    opacity: 0.5;
  }

  .question-text {
    border-bottom: 1px solid white;
    padding-bottom: 10px;
    margin-bottom: 10px;
  }

</style>
<body>
  <div class="row">
    <div class="col-md-3 col-xs-12">
      <div id="section-a">
        <h4>Viewer Control</h4>
        <div id="instructor-actions">
          <div class="action-btn" onclick="emitNextPage()">Next Page</div>
          <div class="action-btn" onclick="emitPreviousPage()">Previous Page</div>
          <div class="action-btn" onclick="emitZoomIn()">Zoom In</div>
          <div class="action-btn" onclick="emitZoomOut()">Zoom Out</div>
          <div class="action-btn" onclick="emitToggleInteraction()">Toggle View</div>
        </div>
      </div>
    </div>
    <div class="col-md-5 col-xs-12">
      <div id="section-b">
        <h4>Approvals</h4>
        <div id="unapproved-questions">

        </div>
      </div>
    </div>
    <div class="col-md-4 col-xs-12">
      <div id="section-c">
        <h4>Live</h4>
        <div id="approved-questions">

        </div>
      </div>
    </div>
  </div>
  <script src="js/instructor.js"></script>
</body>
</html>